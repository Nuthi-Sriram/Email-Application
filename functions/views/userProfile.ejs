<!DOCTYPE html>
<html lang="en">
	<head>
		<title>User Profile | Email Application</title>
		<%- include('components/meta') %> <%- include('components/link') %>
		<%- include('components/firebaseAuth') %>
		
	</head>

	<body>
		<div class="wrapper">
			<%- include('components/sidebar') %>
			<div class="main-panel" style="width: calc(100% - 230px);">
				<nav class="navbar navbar-default">
					
				</nav>
				<div class="content">
					<div class="container-fluid">
						<div class="row">
							<div class="col-lg col-md">
								<div class="card card-user">
									<div class="card-content" style="min-height: 100px;">
										<div class="author">
											<br /><br /><br />
											<h4 class="card-title">
												<%- user.name -%><br />
												<a href="#"
													><small
														><%- user.email
														-%></small
													></a
												>
											</h4>
										</div>
										<p class="description text-center">
											<%- userProfile.bio -%>
										</p>
									</div>
									<hr />
								</div>
							</div>
							<div class="col-lg col-md">
								<div class="card">
									<div class="card-header">
										<h4 class="card-title">Edit Profile</h4>
									</div>
									<div class="card-content">
										<form
											method="POST"
											action="/onUserProfileUpdate"
										>
											<div class="row">
												<div class="col-md-3">
													<div class="form-group">
														<button
															class="btn btn-primary btn-wd"
															type="button"
															onclick="location.href='/updatePassword'"
														>
															Update Password
														</button>
													</div>
												</div>
												<div class="col-md-3">
													<div class="form-group">
														<button
															class="btn btn-danger btn-wd"
															type="button"
															onclick="location.href='/deleteProfile'"
														>
															Delete profile
														</button>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label for="DOB"
															>Date of
															Birth<span style="color:red">*</span></label
														>
														<input
															id="DOB"
															type="date"
															name="DOB"
															class="form-control border-input"
															autocomplete="bday"
															required
															value="<%- userProfile.DOB -%>"
															autofocus
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-6">
													<div class="form-group">
														<label for="countryCode"
															>Country Code<span style="color:red">*</span></label
														>
														<input
															type="tel"
															name="countryCode"
															class="form-control border-input"
															id="countryCode"
															required
															pattern="^\+\d{1,3}$"
															title="Should begin with + and must be a country code"
															autocomplete="tel-country-code"
														/>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-group">
														<label for="mobile"
															>Mobile
															number<span style="color:red">*</span></label
														>
														<input
															type="tel"
															name="mobile"
															id="mobile"
															required
															class="form-control border-input"
															pattern="^[6-9]\d{9}$"
															title="10 digit mobile number"
															autocomplete="tel-national"
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-4">
													<div class="form-group">
														<label for="firstName"
															>First Name<span style="color:red">*</span></label
														>
														<input
															type="text"
															class="form-control border-input"
															placeholder="First Name"
															name="firstName"
															id="firstName"
															required
															autocomplete="given-name"
														/>

													</div>
												</div>
												<div class="col-md-4">
													<div class="form-group">
														<label for="lastName"
															>Last Name<span style="color:red">*</span></label
														>
														<input
															type="text"
															class="form-control border-input"
															placeholder="Last Name"
															name="lastName"
															id="lastName"
															required
															autocomplete="family-name"
														/>
													</div>
												</div>
												<div class="col-md-4">
													<div class="form-group">
														<label for="lastName"
															>Gender<span style="color:red">*</span></label
														>
														<input
															type="text"
															class="form-control border-input"
															placeholder="Gender"
															name="gender"
															id="gender"
															required
															autocomplete="family-name"
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="address1"
															>Address Line
															1<span style="color:red">*</span></label
														>
														<input
															id="address1"
															type="text"
															class="form-control border-input"
															name="address1"
															required
															placeholder="Address Line 1"
															autocomplete="address-line1"
															value="<%- userProfile.addressLine1 -%>"
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="address2"
															>Address Line
															2</label
														>
														<input
															id="address2"
															type="text"
															class="form-control border-input"
															name="address2"
															placeholder="Address Line 2"
															autocomplete="address-line2"
															value="<%- userProfile.addressLine2 -%>"
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-4">
													<div class="form-group">
														<label for="city"
															>City<span style="color:red">*</span></label
														>
														<input
															id="city"
															type="text"
															class="form-control border-input"
															name="city"
															required
															placeholder="City"
															autocomplete="address-level2"
															value="<%- userProfile.city -%>"
														/>
													</div>
												</div>
												<div class="col-md-4">
													<div class="form-group">
														<label for="country"
															>Country<span style="color:red">*</span></label
														>
														<input
															id="country"
															type="text"
															name="country"
															class="form-control border-input"
															placeholder="Country"
															required
															autocomplete="country-name"
															value="<%- userProfile.country -%>"
														/>
													</div>
												</div>
												<div class="col-md-4">
													<div class="form-group">
														<label for="postalCode"
															>Postal Code<span style="color:red">*</span></label
														>
														<input
															id="postalCode"
															type="text"
															name="postalCode"
															class="form-control border-input"
															placeholder="Postal Code"
															required
															autocomplete="postal-code"
															pattern="^[0-9]{6}$"
															value="<%- userProfile.postalCode -%>"
														/>
													</div>
												</div>
											</div>
											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="bio"
															>About Me</label
														>
														<input
															id="bio"
															type="text"
															class="form-control border-input"
															placeholder="Add your description"
															name="bio"
															maxlength="50"
															value="<%- userProfile.bio -%>"
														/>
													</div>
												</div>
											</div>


											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="files">Click on the "Choose File" button to upload a file<span style="color:red">*</span></label>
														<input style="float:right" type="file" id="fileButton" name="fileButton" multiple="" accept="image/*" required>
													</div>
												</div>
											</div>

											<table   id="List">
												<tbody>
										
												</tbody>
											</table>

											<div class="text-center">
												<button
													type="submit"
													class="btn btn-success btn-wd"
												>
													Update Profile
												</button>
											</div>
											<div class="clearfix"></div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<%- include('components/footer') %>
			</div>
		</div>
		<%- include('components/scripts') %>
		<script>
			// console.log("uploading test")
			
			fileButton.addEventListener('change', function (e) {
				for (let i = 0; i < e.target.files.length; i++) {
					let imageFile = e.target.files[i];
					
					let storageRef = firebase.storage().ref("Images/" +  `<%- user.email -%>` + "/" + imageFile.name);
					
					// let storageRef = firebase.storage().ref("Images/" +  <%- user.email -%> + "/" + imageFile.name);
					let task = storageRef.put(imageFile);
		
					task.on('state_changed', function progress(snapshot) {
						let percentage = snapshot.bytesTransferred / snapshot.totalBytes * 100;
						console.log("upload is " + percentage + " %done");
		
						switch (snapshot.state) {
							case firebase.storage.TaskState.PAUSED:
								console.log("upload is paused");
								break;
							case firebase.storage.TaskState.RUNNING:
								console.log("upload is running");
								break;
						}
					})
				}
			})
		
		</script>



<script>
    var storage=firebase.storage();
    var storageRef=storage.ref();
    $('#List').find('tbody').html('');
    var i=0;
	// var path="Images/" +  `<%- user.email -%>` + "/";
	// console.log(path);
    storageRef.child("Images/" +  `<%- user.email -%>` + "/").listAll().then(function(result){
        result.items.forEach(function(imageRef){
            // console.log("Image reference"+imageRef.toString());

            i++;
            displayImage(i, imageRef);
        });
    });

    function displayImage(row, images){
        images.getDownloadURL().then(function(url){
            console.log(url);

            let new_html='';
            new_html+='<tr>';
            new_html+='<td>';
            new_html+=row;
            new_html+='</td>';
            new_html+='<td>';
            new_html+='<img  src="'+url+'"width="300px" style="float: right">';    
            new_html+='</td>';
            new_html+='</tr>';  
            $('#List').find('tbody').append(new_html);
        })

    }
</script>
		<script>
			document.getElementById(
				"firstName"
			).value = `<%- user.name -%>`.split(" ")[0];
			document.getElementById(
				"lastName"
			).value = `<%- user.name -%>`.split(" ")[1];
			document.getElementById(
				"countryCode"
			).value = `<%- user.phone_number -%>`.slice(0, -10);
			document.getElementById(
				"mobile"
			).value = `<%- user.phone_number -%>`.slice(-10);
			var date = new Date();
			var DD = (date.getDate() < 10 ? "0" : "") + date.getDate();
			var MM =
				(date.getMonth() + 1 < 10 ? "0" : "") + (date.getMonth() + 1);
			var YYYY = date.getFullYear();
			document.getElementById("DOB").min =
				YYYY - 100 + "-" + MM + "-" + DD;
			document.getElementById("DOB").max =
				YYYY - 10 + "-" + MM + "-" + DD;
		</script>
	</body>
</html>
