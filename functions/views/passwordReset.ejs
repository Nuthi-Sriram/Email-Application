<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Password Reset | Email Application</title>
		
		<%- include('components/meta') %> <%- include('components/link') %> <%-
		include('components/firebaseAuth') %>
		<link href="/assets/css/style.default.css" rel="stylesheet" />
		<style>
			.panel-signup {
				width:450px;
			}
			.logo img {
				width:50%;
			}
			.image
            {
                position:fixed;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                z-index: -1;
                background-image:
                    linear-gradient(115deg,
                    rgba(37, 122, 233, 0.75),
                    rgba(75, 144, 235, 0.6)
                    ),
                url(assets/img/3.jpg);
                background-size:cover;
                background:position 100%;
            }
		</style>
	</head>
	<body>
		<div class="image">
        </div>
	<body class="signin">
		<div id="sign-in-button"></div>
		<section>
            
            <div class="panel panel-signup">
                <div class="panel-body">
                    <div class="logo text-center">
                        <img src="/assets/img/logo-email.png" alt="Chain Logo" >
                    </div>
                    <br />
                    <h4 class="text-center mb5">Reset Password</h4>
                    <p class="text-center">Please enter your credentials below</p>
                    
                    <div class="mb30"></div>
                    
                    <form action="/passwordReset" method="post">
                        <br />
						<div class="row">
                            <div class="col-sm">
                                <div class="input-group mb15">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-eye-close"></i></span>
                                    <input
									type="number"
									placeholder="OTP"
									class="form-control"
									name="OTP"
									id="OTP"
									autocomplete="OTP"
									required
									autofocus>
                                </div><!-- input-group -->
                            </div>
                        </div><!-- row -->
						<div class="row">
                            <div class="col-sm">
                                <div class="input-group mb15">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input id="password"
									type="password"
									placeholder="New Password"
									class="form-control"
									name="password"
									autocomplete="new-password"
									required>
                                </div><!-- input-group -->
                            </div>
                        </div><!-- row -->
						<div class="row">
                            <div class="col-sm">
                                <div class="input-group mb15">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                    <input id="confirmPassword"
									type="password"
									placeholder="New Password Confirmation"
									class="form-control"
									name="confirmPassword"
									autocomplete="new-password"
									pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
									required>
                                </div><!-- input-group -->
                            </div>
                        </div><!-- row -->
                        <br />
                        <div class="clearfix">
                            <div class="pull-right">
                                <button type="button" onclick="toggleSignIn()" class="btn btn-success">Reset  <i class="fa fa-angle-right ml5"></i></button>
                            </div>
                        </div>
                    </form>
                    
                </div><!-- panel-body -->
            </div><!-- panel -->

			<script src="/assets/js/jquery-1.11.1.min.js"></script>
        <script src="/assets/js/jquery-migrate-1.2.1.min.js"></script>
        <script src="/assets/js/bootstrap.min.js"></script>
        <script src="/assets/js/modernizr.min.js"></script>
        <script src="/assets/js/pace.min.js"></script>
        <script src="/assets/js/retina.min.js"></script>
        <script src="/assets/js/jquery.cookies.js"></script>

        <script src="/assets/js/custom.js"></script>
		<%- include('components/scripts') %>
		<script type="text/javascript">
			function toggleSignIn() {
				if (firebase.auth().currentUser) {
					firebase.auth().signOut();
				} else {
					if (
						document.getElementById("password").value !==
						document.getElementById("confirmPassword").value
					) {
						main.showSwal("passwordMatch");
						return;
					}
					confirmationResult
						.confirm(document.getElementById("OTP").value)
						.then((result) => {
							var user = result.user;
							firebase
								.auth()
								.currentUser.updatePassword(
									document.getElementById("password").value
								)
								.then(function () {
									window.location = "/login";
								})
								.catch((error) => {
									main.showSwal(error.message);
								});
						})
						.catch((error) => {
							main.showSwal(error.message);
						});
				}
			}
			function initApp() {
				firebase
					.auth()
					.setPersistence(firebase.auth.Auth.Persistence.NONE);
				firebase.auth().useDeviceLanguage();
				var recaptchaVerifier;
				recaptchaVerifier = new firebase.auth.RecaptchaVerifier(
					"sign-in-button",
					{
						size: "invisible",
						callback: (response) => {
							// reCAPTCHA solved, allow signInWithPhoneNumber.
							console.log(response);
						},
					}
				);
				firebase
					.auth()
					.signInWithPhoneNumber(
						`<%- userRecord.phoneNumber -%>`,
						recaptchaVerifier
					)
					.then((confirmationResult) => {
						// SMS sent. Prompt user to type the code from the message, then sign the
						// user in with confirmationResult.confirm(code).
						window.confirmationResult = confirmationResult;
					})
					.catch(function (error) {
						main.showSwal(error.message);
					});
			}
			window.onload = initApp();
		</script>
	</body>
</html>
