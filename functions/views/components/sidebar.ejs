<div class="sidebar" data-background-color="brown" data-active-color="danger">
	<!--
			Tip 1: you can change the color of the sidebar's background using: data-background-color="white | brown"
			Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
		-->
	<div class="logo">
		<a href="/" class="simple-text logo-mini">
			EA
		</a>
		<a href="/" class="simple-text logo-normal">
			Email Application
		</a>
	</div>
	<div class="sidebar-wrapper">
		<div class="user">
			<div class="info">
				<a
					data-toggle="collapse"
					href="#collapseExample"
					class="collapsed"
				>
					<span>
						<%- user.name -%> <br />
						<%- user.email -%>
						<b class="caret"></b>
					</span>
				</a>
				<div class="clearfix"></div>

				<div class="collapse" id="collapseExample">
					<ul class="nav">
						<li>
							<a href="/userProfile">
								<span class="sidebar-mini">EP</span>
								<span class="sidebar-normal">Edit Profile</span>
							</a>
						</li>
						<li>
							<a href="/signOut">
								<span class="sidebar-mini">SO</span>
								<span class="sidebar-normal">Sign Out</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<ul class="nav">
			<li>
				<a data-toggle="collapse" href="#contactsEmail">
					<i class="ti-email"></i>
					<p>
						Email
						<b class="caret"></b>
					</p>
				</a>
				<div class="collapse" id="contactsEmail">
					<ul class="nav">
						<li>
							<a href="/inbox">
								<span class="sidebar-mini">I</span>
								<span class="sidebar-normal">Inbox</span>
							</a>
						</li>
						<li>
							<a href="/composeEmail">
								<span class="sidebar-mini">CE</span>
								<span class="sidebar-normal"
									>Compose Email</span
								>
							</a>
						</li>
						<li>
							<a href="/sentEmails">
								<span class="sidebar-mini">SE</span>
								<span class="sidebar-normal">Sent Emails</span>
							</a>
						</li>
						<li>
							<a href="/draftedEmails">
								<span class="sidebar-mini">DE</span>
								<span class="sidebar-normal"
									>Drafted Emails</span
								>
							</a>
						</li>
					</ul>
				</div>
			</li>
			<li>
				<a data-toggle="collapse" href="#contactsContacts">
					<i class="ti-user"></i>
					<p>
						Contacts
						<b class="caret"></b>
					</p>
				</a>
				<div class="collapse" id="contactsContacts">
					<ul class="nav">
						<li>
							<a href="/addContact">
								<span class="sidebar-mini">AC</span>
								<span class="sidebar-normal">Add Contacts</span>
							</a>
						</li>
						<li>
							<a href="/contacts">
								<span class="sidebar-mini">VC</span>
								<span class="sidebar-normal"
									>View Contacts</span
								>
							</a>
						</li>
					</ul>
				</div>
			</li>
		</ul>
	</div>
</div>
